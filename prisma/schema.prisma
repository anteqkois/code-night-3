// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int       @id @default(autoincrement())
  address  String    @unique
  nick     String?   @unique
  // email    String    @unique
  // password String?
  files    File[]
  bids     Bid[]
  auctions Auction[]

  @@index(id)
}

model File {
  id        String    @id
  fileName  String
  affixUrl  String
  url       String
  createdAt DateTime  @default(now())
  updateAt  DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    Int?
  Auction   Auction[]

  @@index(id)
  @@index(userId)
}

model Bid {
  id        Int      @id @default(autoincrement())
  amount    Decimal @db.Decimal(10, 10)
  signature String
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  auction   Auction? @relation(fields: [auctionId], references: [id])
  auctionId Int?

  @@index(userId)
  @@index(auctionId)
}

model Auction {
  id           Int      @id @default(autoincrement())
  title        String
  mark         String
  model        String
  year         Int
  mileage      Int
  crashed      Boolean
  CurrentPrice Decimal @db.Decimal(10, 10)
  vin          String
  fuelType     String
  expireDate   DateTime
  enginePower  Int
  image        File     @relation(fields: [imageId], references: [id])
  imageId      String
  views        Int?
  bids         Bid[]
  user         User?    @relation(fields: [userId], references: [id])
  userId       Int?

  @@index(userId)
  @@index(imageId)
}
